

<h1 class="text-center">Your Gmail-like Inbox</h1>
<hr>
<div class="ml-4 mb-3">
  <%= button_to "Receive an email", emails_path, data:{method: "POST"}, class:"btn btn-dark", remote: true %>
</div>
<div class="row ml-2">
  <div class="rounded-lg col-4">
    <table class="table">
      <thead class="thead-primary">
      </thead>
      <tbody id="list_email" class="list-group">  
      <b class="list-group-item text-white bg-dark">Emails</b>
          <% @emails.order(:created_at).each do |email| %>
          <tr>
            <%= render 'email', email: email %>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
  <div class="rounded-lg col-8">
    <table class="table">
      <tbody id="content">

      </tbody>
    </table>
  </div>
</div>  