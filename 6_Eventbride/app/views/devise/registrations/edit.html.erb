<main class="container">
<h2 class="text-center">Editer votre profil</h2>
<div class="form-group">
  <%= form_tag user_avatars_path(@user), multipart: true do %>
    <%= file_field_tag :avatar %>
    <%= submit_tag "mettre à jour" %>
  <% end %>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, placeholder: "email", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :current_password %> <i>(Nous avons besoin de votre mot de passe actuel pour confirmer les changements)</i><br />
    <%= f.password_field :current_password, placeholder: "mot de passe actuel", class:"form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password %> <i>(Laissez le champ vide si vous ne voulez pas modifier votre mot de passe)</i><br />
    <%= f.password_field :password, placeholder: "new-password", class:"form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caractères minimums</em>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, placeholder:"nouveau mot de passe", class:"form-control" %>
  </div>
<br>

  <div class="form-group">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, placeholder: "Votre prénom", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, placeholder: "Votre nom", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %><br />
    <%= f.text_area :description, placeholder: "description", class:"form-control" %>
  </div>  
    <div class="actions">
    <%= f.submit "Update", class:"btn btn-success btn-lg" %>
  </div>
<% end %>
<hr>
<div class="text-center">
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-outline-danger" %></p>
</div>
<hr>

<%= link_to "« Retour au profil", :back, class:"btn btn-primary" %>
</main>